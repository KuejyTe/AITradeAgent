# Backend Configuration
PROJECT_NAME=AITradeAgent
VERSION=1.0.0
API_V1_STR=/api/v1
ENVIRONMENT=development
DEBUG=True

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/aitradeagent
# For local development you can switch to SQLite by uncommenting the line below
# DATABASE_URL=sqlite+pysqlite:///./aitradeagent.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# WebSocket Configuration
WS_MESSAGE_QUEUE_SIZE=100

# Frontend Configuration (for .env in frontend/)
VITE_API_URL=http://localhost:8000

# OKX API Configuration
OKX_API_KEY=your_api_key
OKX_SECRET_KEY=your_secret_key
OKX_PASSPHRASE=your_passphrase
OKX_API_BASE_URL=https://www.okx.com
OKX_WS_PUBLIC_URL=wss://ws.okx.com:8443/ws/v5/public
OKX_WS_PRIVATE_URL=wss://ws.okx.com:8443/ws/v5/private

# Redis Configuration
REDIS_URL=redis://localhost:6379

# 应用配置
APP_NAME=AITradeAgent
ENVIRONMENT=development
DEBUG=true

欧易API配置
OKX_API_KEY=your_api_key_here
OKX_SECRET_KEY=your_secret_key_here
OKX_PASSPHRASE=your_passphrase_here
OKX_API_BASE_URL=https://www.okx.com
OKX_WS_PUBLIC_URL=wss://ws.okx.com:8443/ws/v5/public
OKX_WS_PRIVATE_URL=wss://ws.okx.com:8443/ws/v5/private

数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/aitradeagent
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false
Redis配置（可选）
REDIS_URL=redis://localhost:6379/0

安全配置
SECRET_KEY=your-secret-key-for-jwt-change-this-in-production
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=generate-using-SecureStorage.generate_key()

日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

交易配置
DEFAULT_TRADE_AMOUNT=100
MAX_POSITION_SIZE=10000
RISK_PERCENTAGE=0.02

监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

Sentry配置（可选）
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

告警配置（可选）
ALERT_EMAIL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
