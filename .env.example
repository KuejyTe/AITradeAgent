# Application metadata
PROJECT_NAME=AITradeAgent
APP_NAME=AITradeAgent
VERSION=1.0.0
API_V1_STR=/api/v1

# 环境配置
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# 欧易API配置
OKX_API_KEY=your_api_key_here
OKX_SECRET_KEY=your_secret_key_here
OKX_PASSPHRASE=your_passphrase_here
OKX_API_BASE_URL=https://www.okx.com
OKX_WS_PUBLIC_URL=wss://ws.okx.com:8443/ws/v5/public
OKX_WS_PRIVATE_URL=wss://ws.okx.com:8443/ws/v5/private

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/aitradeagent
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Redis配置（可选）
REDIS_URL=redis://localhost:6379/0

# 安全配置
SECRET_KEY=your-secret-key-for-jwt
JWT_EXPIRATION_HOURS=24
# 使用 `python -c "from app.core.security import SecureStorage; print(SecureStorage.generate_key())"` 生成
ENCRYPTION_KEY=

# 日志与审计
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=10
LOG_ROTATION_WHEN=midnight
LOG_ROTATION_INTERVAL=1
CONFIG_AUDIT_LOG=logs/config_audit.log

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry配置
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# 告警配置
ALERT_EMAIL=admin@example.com
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 配置存储路径
CONFIG_STORAGE_DIR=configs/system
CONFIG_BACKUP_DIR=configs/backups
STRATEGY_CONFIG_DIR=configs/strategies
API_KEYS_STORE=configs/secure/api_keys.json

# 交易配置
DEFAULT_TRADE_AMOUNT=100
MAX_POSITION_SIZE=10000
RISK_PERCENTAGE=0.02
SLIPPAGE_TOLERANCE=0.001

# 通知配置（根据需要启用）
NOTIFICATIONS_EMAIL=
NOTIFICATIONS_TELEGRAM_BOT_TOKEN=
NOTIFICATIONS_TELEGRAM_CHAT_ID=
NOTIFICATIONS_WECHAT_WEBHOOK=

# 前端访问 API 地址
VITE_API_URL=http://localhost:8000
